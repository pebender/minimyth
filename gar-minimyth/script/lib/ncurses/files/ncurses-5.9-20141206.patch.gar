diff -Naur ncurses-5.9-old/aclocal.m4 ncurses-5.9-new/aclocal.m4
--- ncurses-5.9-old/aclocal.m4	2019-11-17 09:51:08.971000010 -0800
+++ ncurses-5.9-new/aclocal.m4	2019-11-17 09:53:34.936005964 -0800
@@ -99,14 +99,14 @@
 	ACPPFLAGS="-I\${srcdir}/../../include $ACPPFLAGS"
 fi
 if test "$GCC" != yes; then
-	ACPPFLAGS="$ACPPFLAGS -I\${includedir}"
+	ACPPFLAGS="$ACPPFLAGS -I\${DESTDIR}\${includedir}"
 elif test "$includedir" != "/usr/include"; then
 	if test "$includedir" = '${prefix}/include' ; then
 		if test x$prefix != x/usr ; then
-			ACPPFLAGS="$ACPPFLAGS -I\${includedir}"
+			ACPPFLAGS="$ACPPFLAGS -I\${DESTDIR}\${includedir}"
 		fi
 	else
-		ACPPFLAGS="$ACPPFLAGS -I\${includedir}"
+		ACPPFLAGS="$ACPPFLAGS -I\${DESTDIR}\${includedir}"
 	fi
 fi
 AC_SUBST(ACPPFLAGS)
