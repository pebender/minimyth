GARNAME = nfs-utils
GARVERSION = 1.2.4
CATEGORIES = net
MASTER_SITES = http://downloads.sourceforge.net/project/nfs/$(GARNAME)/$(GARVERSION)/
DISTFILES = $(DISTNAME).tar.bz2
PATCHFILES = $(DISTNAME)-git_151a82d.patch
LICENSE = GPL2

DESCRIPTION = 
define BLURB
endef

DEPENDS   = lang/c lang/cxx net/libtirpc utils/util-linux
BUILDDEPS = devel/glibc-rpcgen-static

CONFIGURE_SCRIPTS = $(WORKSRC)/configure
BUILD_SCRIPTS     = $(WORKSRC)/support/Makefile $(WORKSRC)/utils/Makefile $(WORKSRC)/utils/mount/Makefile
INSTALL_SCRIPTS   = $(WORKSRC)/support/Makefile $(WORKSRC)/utils/mount/Makefile

CONFIGURE_ARGS = $(DIRPATHS) --build=$(GARBUILD) --host=$(GARHOST) \
	--enable-nfsv3 \
	--disable-nfsv4 \
	--disable-nfsv41 \
	--disable-gss \
	--disable-kprefix \
	--enable-uuid \
	--enable-mount \
	--enable-libmount-mount \
	--enable-tirpc \
	--disable-ipv6 \
	--disable-mountconfig \
	--disable-caps \
	--enable-largefile \
	--enable-shared \
	--disable-static \
	--with-tirpcinclude=$(DESTDIR)$(includedir)/tirpc \
	--with-rpcgen=$(build_DESTDIR)$(build_bindir)/rpcgen-static \
	--without-tcp-wrappers \
	--with-gnu-ld \
	--without-krb5
CONFIGURE_ENV = \
	CFLAGS_FOR_BUILD="$(build_CFLAGS)" \
	CXXFLAGS_FOR_BUILD="$(build_CXXFLAGS)" \
	CPPFLAGS_FOR_BUILD="$(build_CPPFLAGS)" \
	LDFLAGS_FOR_BUILD="$(build_LDFLAGS)" \
	libblkid_cv_is_recent="yes"

include ../../gar.mk

pre-configure:
	@$(call RUN_AUTOTOOLS)
	@$(call FIX_LIBTOOL,$(WORKSRC)/configure)
	@$(MAKECOOKIE)
