KERNEL="hd[a-z]" , BUS="ide" , PROGRAM="/etc/udev/bin/mm_cdrom_check %k"              , SYMLINK="cdrom%e"
KERNEL="sr[0-9]*", BUS="scsi", PROGRAM="/etc/udev/bin/mm_cdrom_check %k"              , SYMLINK="cdrom%e"

KERNEL="hd[a-z]" , BUS="ide" , PROGRAM="/etc/udev/bin/mm_cdrom_check %k 'read DVD'"   , SYMLINK="dvd%e"
KERNEL="sr[0-9]*", BUS="scsi", PROGRAM="/etc/udev/bin/mm_cdrom_check %k 'read DVD'"   , SYMLINK="dvd%e"

KERNEL="hd[a-z]" , BUS="ide" , PROGRAM="/etc/udev/bin/mm_cdrom_check %k 'write CD-R'" , SYMLINK="cdwriter%e"
KERNEL="sr[0-9]*", BUS="scsi", PROGRAM="/etc/udev/bin/mm_cdrom_check %k 'write CD-R'" , SYMLINK="cdwriter%e"

KERNEL="hd[a-z]" , BUS="ide" , PROGRAM="/etc/udev/bin/mm_cdrom_check %k 'write DVD-R'", SYMLINK="dvdwriter%e"
KERNEL="sr[0-9]*", BUS="scsi", PROGRAM="/etc/udev/bin/mm_cdrom_check %k 'write DVD-R'", SYMLINK="dvdwriter%e"
