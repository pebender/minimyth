#!/bin/sh

. /lib/minimyth/mm_state

name="${1}"
driver="${2}"

device="${DEVNAME}"

case "${ACTION}" in
    add)
        if /usr/bin/test -z "${name}"   || \
           /usr/bin/test -z "${device}" || \
           /usr/bin/test -z "${driver}" ; then
            exit 0
        fi

        mm_state_put 'lcdproc' 'automatic' "${name}" "${device},${driver}"
        ;;
    remove)
        if /usr/bin/test -z "${name}"   ; then
            exit 0
        fi

        mm_state_delete 'lcdproc' 'automatic' "${name}"
        ;;
esac

exit 0
