  ENV{mm_hardware_id}=="usb:0471:0815", RUN+="/lib/udev/mm_lirc %k mceusb2 mceusb2"
  ENV{mm_hardware_id}=="usb:0609:031d", RUN+="/lib/udev/mm_lirc %k mceusb2 mceusb2"
  ENV{mm_hardware_id}=="usb:0bc7:0002", RUN+="/lib/udev/mm_lirc %k atiusb"
  ENV{mm_hardware_id}=="usb:0bc7:0003", RUN+="/lib/udev/mm_lirc %k atiusb"
  ENV{mm_hardware_id}=="usb:0bc7:0004", RUN+="/lib/udev/mm_lirc %k atiusb"
