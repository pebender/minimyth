#-------------------------------------------------------------------------------
# Detect LIRC devices.
#-------------------------------------------------------------------------------
ACTION=="add|remove", SUBSYSTEM=="lirc", SUBSYSTEMS=="usb", GOTO="begin"
GOTO="end"
LABEL="begin"

# Import mm_hardware_id.
IMPORT{program}="/lib/udev/mm_hardware_id"

#-------------------------------------------------------------------------------
#
#-------------------------------------------------------------------------------
  ENV{mm_hardware_id}=="usb:03eb:0002", RUN+="/lib/udev/mm_lirc %k igorplugusb"
  ENV{mm_hardware_id}=="usb:045e:006d", RUN+="/lib/udev/mm_lirc %k mceusb mceusb"
  ENV{mm_hardware_id}=="usb:0471:0602", RUN+="/lib/udev/mm_lirc %k atiusb"
