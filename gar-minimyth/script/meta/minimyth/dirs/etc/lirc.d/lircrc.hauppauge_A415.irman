################################################################################
# lircrc file for the Hauppauge A415 remote using an irman receiver.
################################################################################

################################################################################
#
################################################################################

################################################################################
# MythTV
#
# Non-obvious key mappings:
#     STAR       : Screen Mode
#     HASH       : Close Captioning
#     KEY_RED    : OSD
#     KEY_GREEN  : Info
#     KEY_YELLOW : Close Captioning
#     KEY_BLUE   : Screen Mode
################################################################################
begin
    prog = mythtv
    remote = lircrc.hauppauge_A415.irman
    button = STAR
    config = W
end

begin
    prog = mythtv
    remote = lircrc.hauppauge_A415.irman
    button = HASH
    config = T
end

begin
    prog = mythtv
    remote = lircrc.hauppauge_A415.irman
    button = KEY_RED
    config = O
end

begin
    prog = mythtv
    remote = lircrc.hauppauge_A415.irman
    button = KEY_GREEN
    config = I
end

begin
    prog = mythtv
    remote = lircrc.hauppauge_A415.irman
    button = KEY_YELLOW
    config = T
end

begin
    prog = mythtv
    remote = lircrc.hauppauge_A415.irman
    button = KEY_BLUE
    config = W
end

