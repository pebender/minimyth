#!/bin/sh
################################################################################
# mm_mythdb_jumppoint_delete
################################################################################
[ -n "`mm_var_get MM_DEBUG`" ] && set -x

DESTINATION=$1
HOSTNAME=`hostname`

if [ -n "${DESTINATION}" ] ; then
    mm_mythdb_command_run "DELETE FROM jumppoints \
        WHERE hostname=\"${HOSTNAME}\" AND destination=\"${DESTINATION}\""
else
    mm_mythdb_command_run "DELETE FROM jumppoints \
        WHERE hostname=\"${HOSTNAME}\""
fi
