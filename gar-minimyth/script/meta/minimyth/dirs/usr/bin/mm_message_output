#!/bin/sh
################################################################################
# mm_message_output
################################################################################

LEVEL=$1
MESSAGE=$2

if [ -e "/var/cache/splash/fifo" ] ; then
    logger    -t minimyth -p local0.${LEVEL} "${MESSAGE}"
    echo "set message ${MESSAGE}" >> /var/cache/splash/fifo
    echo "repaint"                >> /var/cache/splash/fifo
else
    logger -s -t minimyth -p local0.${LEVEL} "${MESSAGE}"
fi
