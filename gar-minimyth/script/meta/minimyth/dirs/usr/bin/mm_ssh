#!/bin/sh

. /etc/rc.d/functions

if /usr/bin/test ! "${MM_SSH_REMOTE_ENABLED}" = "yes" ; then
    /usr/bin/logger -t minimyth -p "local0.error" \
         "mm_ssh: ssh client has not been enabled."
    exit 1
fi

if /usr/bin/test -r /etc/dropbear/id_rsa_remote ; then
    /usr/bin/logger -t minimyth -p "local0.error" \
         "mm_ssh: ssh user does not have access to the ssh identity."
    exit 1
fi

/usr/bin/dbclient -y -p ${MM_SSH_REMOTE_PORT} -i /etc/dropbear/id_rsa_remote "$@"
