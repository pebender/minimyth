          MultiMon                 0x2AB195B7
          TaskSwitcher             0x2A9395B7
          KEY_MUTE                 0x2B9595B7
          KEY_VOLUMEUP             0x28A395B7
          KEY_VOLUMEDOWN           0x28A595B7
          KEY_CHANNELUP            0x289395B7
          KEY_CHANNELDOWN          0x288795B7
          Timer                    0x2B8395B7
          KEY_NUMERIC_1            0x28B595B7
          KEY_NUMERIC_2            0x2BB195B7
          KEY_NUMERIC_3            0x28B195B7
          KEY_NUMERIC_4            0x2A8595B7
          KEY_NUMERIC_5            0x299595B7
          KEY_NUMERIC_6            0x2AA595B7
          KEY_NUMERIC_7            0x2B9395B7
          KEY_NUMERIC_8            0x2A8515B7
          KEY_NUMERIC_9            0x2AA115B7
          KEY_NUMERIC_0            0x2BA595B7
          ShiftTab                 0x28B515B7
          Tab                      0x29A115B7
          KEY_VIDEO                0x2B8515B7 # MyMovie button
          KEY_MP3                  0x299195B7 # MyMusic button
          KEY_IMAGES               0x2BA115B7 # MyPhoto button
          KEY_TV                   0x28A515B7 # MyTV button
          Bookmark                 0x288515B7
