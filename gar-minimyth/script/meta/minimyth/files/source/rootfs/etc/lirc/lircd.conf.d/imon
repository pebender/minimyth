begin remote

  name  antec_fusion_knob
  bits           16
  eps            30
  aeps          100

  one             0     0
  zero            0     0
  post_data_bits  16
  post_data      0xFF
  gap          131971
  min_repeat      1
  toggle_bit      0


      begin codes
          KEY_VOLUMEDOWN           0x0100
          KEY_VOLUMEUP             0x0001
      end codes

end remote

