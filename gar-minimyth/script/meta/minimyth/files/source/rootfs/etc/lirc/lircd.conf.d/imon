          KEY_PEVIOUS              0x2B9115B7 # |< button
          KEY_STOP                 0x2B9715B7
          KEY_NEXT                 0x298195B7 # >| button
          KEY_ESC                  0x2BB715B7
          Eject                    0x299395B7
