begin remote

  name imon_pad
  bits           32
  eps            30
  aeps          100

  one             0     0
  zero            0     0
  gap          235965
  min_repeat      1
  toggle_bit      0


      begin codes
          KEY_EXIT                 0x288195B7 # AppExit button
          KEY_RECORD               0x298115B7
          KEY_PLAY                 0x2A8115B7
          SlowMotion               0x29B195B7
          KEY_REWIND               0x2A8195B7 # << button
          KEY_PAUSE                0x2A9115B7
