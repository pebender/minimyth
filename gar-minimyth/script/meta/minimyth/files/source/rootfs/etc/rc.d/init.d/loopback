#!/bin/sh
################################################################################
# loopback
################################################################################
. /etc/rc.d/functions

start() {

    mm_message_output info "starting loopback network interface ..."

    # Bring up the loopback network interface.
    /sbin/ifconfig lo 127.0.0.1 up

    # Start portmap on the local netowrk interface.
    /sbin/portmap -l

    return 0
}

stop() {
    mm_message_output info "stopping loopback network interface ..."

    # Stop portmap on the local network interface.
    /usr/bin/test -n "`/bin/pidof portmap`" && /usr/bin/killall portmap

    # Bring down the loopback network interface.
    /sbin/ifconfig lo 0 down

    return 0
}

case $1 in
    start) start ;;
    stop)  stop  ;;
esac

exit 0
