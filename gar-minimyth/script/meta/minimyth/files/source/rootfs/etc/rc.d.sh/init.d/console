#!/bin/sh
################################################################################
# console
################################################################################
. /etc/rc.d.sh/functions

start() {

    # Run a virtual console on machines that have security disabled.
    if /usr/bin/test "${MM_SECURITY_ENABLED}" = "no" ; then
        if /usr/bin/test ! -n "`/bin/pidof agetty`" ; then
            mm_message_output info "starting virtual console ..."
            /sbin/agetty 9600 tty1 &
        fi
    # Otherwise, stop the virtual console.
    else
        if /usr/bin/test   -n "`/bin/pidof agetty`" ; then
            mm_message_output info "stopping virtual console ..."
            /usr/bin/killall agetty
        fi
    fi

    return 0
}

stop() {

    if /usr/bin/test   -n "`/bin/pidof agetty`" ; then
        mm_message_output info "stopping virtual console ..."
        /usr/bin/killall agetty
    fi

    return 0
}

case $1 in
    start) start ;;
    stop)  stop  ;;
esac

exit 0
