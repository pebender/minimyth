GARNAME = libva
GARVERSION = $(LIBVA_VERSION)
CATEGORIES = X11
MASTER_SITES = https://github.com/intel/libva/archive/
DISTFILES = $(GARVERSION).tar.gz
LICENSE = MIT

DESCRIPTION = 
define BLURB
endef

DEPENDS = lang/c lang/cxx \
	xorg/libdrm \
	xorg/libX11 \
	xorg/libXext \
	xorg/libXfixes \
	xorg/Mesa

CONFIGURE_SCRIPTS = $(WORKSRC)/configure
BUILD_SCRIPTS     = $(WORKSRC)/Makefile
INSTALL_SCRIPTS   = $(WORKSRC)/Makefile

CONFIGURE_ARGS = $(DIRPATHS) --build=$(GARBUILD) --host=$(GARHOST) \
	--disable-silent-rules \
	--disable-docs \
	--enable-drm \
	--enable-x11 \
	--enable-glx \
	--disable-wayland \
	--disable-static \
	--enable-shared \
	--with-drivers-path="$(libdir)/dri"

GAR_EXTRA_CONF += X11/libva/package-api.mk
include ../../gar.mk

pre-configure:
	@mkdir -p $(WORKSRC)/m4
	@$(call RUN_AUTOTOOLS)
	@$(MAKECOOKIE)

post-install:
	@rm -f $(DESTDIR)$(libdir)/libva.la
	@rm -f $(DESTDIR)$(libdir)/libva-drm.la
	@rm -f $(DESTDIR)$(libdir)/libva-glx.la
	@rm -f $(DESTDIR)$(libdir)/libva-x11.la
	@$(MAKECOOKIE)
