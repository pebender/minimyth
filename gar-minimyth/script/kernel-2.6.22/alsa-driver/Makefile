GARNAME = alsa-driver
GARVERSION = 1.0.15
CATEGORIES = kernel-2.6.22
MASTER_SITES  = ftp://ftp.alsa-project.org/pub/driver/
MASTER_SITES += ftp://ftp.alsa-project.org/pub/testing/
DISTFILES = $(DISTNAME).tar.bz2
PATCHFILES = $(DISTNAME)-depmod.patch
LICENSE = LGPL2_1

DESCRIPTION = 
define BLURB
endef

DEPENDS = lang/c kernel-2.6.22/linux

CONFIGURE_SCRIPTS = $(WORKSRC)/configure
BUILD_SCRIPTS     = $(WORKSRC)/Makefile
INSTALL_SCRIPTS   = $(WORKSRC)/Makefile


CONFIGURE_ARGS = $(DIRPATHS) --build=$(GARBUILD) \
	--with-cross="$(compiler_prefix)" \
	--with-kernel="$(DESTDIR)$(LINUX_BUILDDIR)" \
	--with-build="$(DESTDIR)$(LINUX_BUILDDIR)" \
	--with-redhat=no \
	--with-suse=no \
	--with-moddir="$(LINUX_MODULESDIR)/kernel/sound" \
	--with-isapnp=no \
	--with-sequencer=yes \
	--with-oss=no \
	--with-cards="atiixp,cmipci,ens1371,hda-intel,ice1724,intel8x0,intel8x0m,usb-audio,via82xx"

CONFIGURE_ENV = $(LINUX_MAKE_ENV)
BUILD_ENV     = $(LINUX_MAKE_ENV)
INSTALL_ENV   = $(LINUX_MAKE_ENV) IUSER="$(IUSER)" IGROUP="$(IGROUP)"

GAR_EXTRA_CONF += kernel-2.6.22/linux/package-api.mk
include ../../gar.mk

CC       := 
CPPFLAGS :=
CFLAGS   :=
LDFLAGS  :=

IUSER  := `id -u`
IGROUP := `id -g`

post-install:
	@depmod -b "$(DESTDIR)$(rootdir)" "$(LINUX_FULL_VERSION)"
	@$(MAKECOOKIE)
