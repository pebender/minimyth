diff -Naur ffmpeg-15908.27979-old/configure ffmpeg-15908.27979-new/configure
--- ffmpeg-15908.27979-old/configure	2008-11-22 11:45:06.000000000 -0800
+++ ffmpeg-15908.27979-new/configure	2008-11-22 11:45:33.000000000 -0800
@@ -689,11 +689,11 @@
     func=$4
     shift 4
     disable $cfg
-    check_cmd ${pkg}-config --version
+    check_cmd @GAR_DESTDIR@@GAR_bindir@/${pkg}-config --version
     err=$?
     if test "$err" = 0; then
