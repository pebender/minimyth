################################################################################
# cron configuration variables and files.
################################################################################
conf_clean_cron() {
    /bin/rm -rf /tmp/init.conf.cron

    return 0
}

conf_check_cron() {
    return 0
}

conf_default_cron() {
    if /usr/bin/test -z "${MM_CRON_FETCH_CRONTAB}" ; then
        MM_CRON_FETCH_CRONTAB='no'
    fi

    return 0
}

conf_write_cron() {
    local conf_file=$1

    conf_variable_write "${conf_file}" MM_CRON_FETCH_CRONTAB "${MM_CRON_FETCH_CRONTAB}"

    return 0
}

conf_fetch_cron() {
    if /usr/bin/test "${MM_CRON_FETCH_CRONTAB}" = "yes" ; then
        /bin/rm -f /var/spool/cron/crontabs/root
        mm_confro_get crontab /var/spool/cron/crontabs/root
        if /usr/bin/test ! -e /var/spool/cron/crontabs/root ; then
            mm_message_output err "error: failed to fetch 'crontab' file."
        fi
    fi

    return 0
}
