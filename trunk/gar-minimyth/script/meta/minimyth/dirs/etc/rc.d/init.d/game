#!/bin/sh
################################################################################
# game
################################################################################
. /etc/rc.d/functions

start() {

    mm_message_output info 'restoring selected game configuration files ...'

    if /usr/bin/test "${MM_GAME_SAVE_ENABLE}" = "yes" ; then
        mm_game_restore
    fi
}

stop() {
    mm_message_output info 'saving selected game configuration files ...'

    if /usr/bin/test "${MM_GAME_SAVE_ENABLE}" = "yes" ; then
        mm_game_save
    fi
}

case $1 in
    start) start ;;
    stop)  stop  ;;
esac

exit 0
