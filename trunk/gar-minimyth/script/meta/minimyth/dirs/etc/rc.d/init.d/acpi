#!/bin/sh
################################################################################
# acpi
################################################################################
. /etc/rc.d/functions

start() {
    mm_message_output info 'starting ACPI ...'

    acpid -S

    return 0
}

stop() {
    mm_message_output info 'stopping ACPI ...'

    # Load ACPI kernel modules.
    modprobe button
    modprobe fan
    modprobe processor
    modprobe thermal
    modprobe video

    [ -n "`pidof acpid`" ] && killall acpid

    return 0
}

case $1 in
    start) start ;;
    stop)  stop  ;;
esac

exit 0
