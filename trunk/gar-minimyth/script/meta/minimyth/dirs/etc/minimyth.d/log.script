#!/bin/sh
################################################################################
# log.script
################################################################################
[ -n "`mm_var_get MM_DEBUG`" ] && set -x

MM_LOG_SERVER=`mm_var_get MM_LOG_SERVER`

if [ -n "${MM_LOG_SERVER}" ] ; then
    syslogd -R "${MM_LOG_SERVER}"
else
    syslogd
fi
klogd

exit 0
