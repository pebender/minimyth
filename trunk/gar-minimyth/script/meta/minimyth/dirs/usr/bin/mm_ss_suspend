#!/bin/sh

trap "_exit_" 0 1 2 3 15

_exit_()
{
    ps -o ppid,pid,args \
    | sed -e 's%  *% %g' -e 's%^ %%' -e 's% $%%' \
    | grep "^$$ " \
    | grep '/bin/sleep [^ ]*$' \
    | cut -d ' ' -f 2 \
    | while read pid ; do
        kill $pid
    done
}

program=$1

while /usr/bin/test -n "`/bin/pidof ${program}`" ; do
    /usr/bin/xset s reset
    if /usr/bin/test -n "`/bin/pidof xscreensaver`" ; then
        /usr/bin/xscreensaver-command -deactivate
    fi
    /bin/sleep 30
done

exit 0
