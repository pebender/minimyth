#!/bin/sh
################################################################################
# mm_mythdb_keybinding_update
################################################################################
[ -n "`mm_var_get MM_DEBUG`" ] && set -x

CONTEXT=$1
ACTION=$2
KEYLIST=$3
HOSTNAME=`hostname`

mm_mythdb_command_run "UPDATE keybindings SET keylist=\"${KEYLIST}\" \
    WHERE hostname=\"${HOSTNAME}\" AND context=\"${CONTEXT}\" AND action=\"${ACTION}\""
