output_page() {
    page_host="$1"
    page_date="$2"
    page_path="$3"
    page_head="$4"
    page_body="$5"
    
    echo "Content-Type"content="text/html; charset=iso-8859-1"
    echo
    echo "<html lang=\"en\">"
    echo "<head>"
    echo "<meta http-equiv=\"Content-Type\" content=\"text/html; charset=iso-8859-1\" />"
    echo "<link rel=\"stylesheet\" type=\"text/css\" href=\"/minimyth.css\" />"
    echo "<title>MiniMyth - ${page_head} - ${page_host} - ${page_date}</title>"
    echo "</head>"
    echo "<body>"
    echo "<h1>${page_head} for ${page_host}</h1>"
    echo "${page_body}"
    echo "<hr />"
    echo "<address>"
    echo "MiniMyth @mm_VERSION@"
    echo "from"
    echo "<a href=\"http://linpvr.org\">LinPVR.org</a>."
    echo "</address>"
    echo "</body>"
    echo "</html>"
}

output_status() {
   status_head="$1"
   status_body="$2"

   echo "<div class=\"status\">"
   echo "<h2 class=\"status\">${status_head}</h2>"
   echo "<pre>"
   echo "${status_body}"
   echo "</pre>"
   echo "</div>"
}
