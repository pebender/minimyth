. /etc/conf

output_page() {
    page_host="$1"
    page_date="$2"
    page_path="$3"
    page_head="$4"
    page_body="$5"
    
    /bin/echo "Content-Type"content="text/html; charset=iso-8859-1"
    /bin/echo
    /bin/echo "<html lang=\"en\">"
    /bin/echo "<head>"
    /bin/echo "<meta http-equiv=\"Content-Type\" content=\"text/html; charset=iso-8859-1\" />"
    /bin/echo "<link rel=\"stylesheet\" type=\"text/css\" href=\"/minimyth.css\" />"
    /bin/echo "<title>MiniMyth - ${page_head} - ${page_host} - ${page_date}</title>"
    /bin/echo "</head>"
    /bin/echo "<body>"
    /bin/echo "<h1>${page_head} for ${page_host}</h1>"
    /bin/echo "${page_body}"
    /bin/echo "<hr />"
    /bin/echo "<address>"
    /bin/echo "MiniMyth ${MM_VERSION}"
    /bin/echo "from"
    /bin/echo "<a href=\"http://linpvr.org\">LinPVR.org</a>."
    /bin/echo "</address>"
    /bin/echo "</body>"
    /bin/echo "</html>"
}

output_status() {
   status_head="$1"
   status_body="$2"

   /bin/echo "<div class=\"status\">"
   /bin/echo "<h2 class=\"status\">${status_head}</h2>"
   /bin/echo "<pre>"
   /bin/echo "${status_body}"
   /bin/echo "</pre>"
   /bin/echo "</div>"
}
