# ATTRS{modalias}=="pci:v000010DEd0000006Asv00001043sd00008095bc04sc01i00", RUN+="/lib/udev/mm_audio %k %n 2" # ASUS A7N8X-E
  ATTRS{modalias}=="pci:v000010DEd0000026Csv00001043sd000081CBbc04sc03i00", RUN+="/lib/udev/mm_audio %k %n 0" # ASUS M2NPV-VM
  ATTRS{modalias}=="pci:v000010DEd0000026Csv000010DEsd0000CB84bc04sc03i00", RUN+="/lib/udev/mm_audio %k %n 0" # ASUS A8N-VM CSM

