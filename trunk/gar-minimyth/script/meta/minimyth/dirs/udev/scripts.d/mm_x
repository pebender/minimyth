#!/bin/sh
################################################################################
# mm_x
#
# Arguments:
#     name   : The name of the audio device. Use %k.
#     driver : The X driver.
################################################################################

. /lib/minimyth/mm_state

name=$1
driver=$2

case "${ACTION}" in
    add)
        if /usr/bin/test -z "${name}" ; then
            exit 0
        fi

        mm_state_put 'x' 'automatic' "${name}" "${driver}"
        ;;
    remove)
        if /usr/bin/test -z "${name}" ; then
            exit 0
        fi

        mm_state_delete 'x' 'automatic' "${name}"
        ;;
esac

exit 0
