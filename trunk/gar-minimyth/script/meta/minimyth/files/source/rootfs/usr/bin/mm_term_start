#!/usr/bin/perl

use strict;
use warnings;

require File::Basename;
require File::Spec;

my $program = File::Basename::basename(__FILE__);
my @command = @ARGV;

if (! @command)
{
    @command = ('/bin/sh');
}

my $devnull = File::Spec->devnull;

@command = ('/usr/bin/mm_run_without_ss', '/usr/bin/rxvt', '-display', ':0.0', '-e', @command);

system(@command);

1;
