GARNAME = mythplugins
GARVERSION = $(MYTHPLUGINS_VERSION)
CATEGORIES = $(CATEGORY)
MASTER_SITES = svn://svn.mythtv.org/svn/$(MYTHTV_SVN_BRANCH)/$(GARNAME)/
DISTFILES = $(DISTNAME).tar.bz2
PATCHFILES  =
PATCHFILES += \
	$(DISTNAME_SHORT)-mythbrowser_kdecore.patch \
	$(DISTNAME_SHORT)-gcc_4.3.patch \
	$(DISTNAME_SHORT)-mythweather_weather_com.patch \
	$(DISTNAME_SHORT)-mythmusic_cdio.patch \
	$(DISTNAME_SHORT)-mythmusic_fftw3.patch \
	$(DISTNAME_SHORT)-mythvideo_tmdb_pl.patch \
	$(DISTNAME_SHORT).patch.gar \
	$(DISTNAME_SHORT)-init.patch \
	$(DISTNAME_SHORT)-softpad.patch
LICENSE = GPL2

DESCRIPTION = 
define BLURB
endef

DEPENDS = \
	lang/cxx \
	$(CATEGORY)/mythtv

CATEGORY := $(shell basename $(shell dirname $(shell pwd)))

GAR_EXTRA_CONF += $(CATEGORY)/myth/package-api.mk
include ../../gar.mk

svn//%/$(DISTNAME).tar.bz2:
	@$(call FETCH_SVN, http://$*, $(MYTHTV_SVN_VERSION), $(DISTNAME))
	@$(MAKECOOKIE)

checksum-$(DISTNAME).tar.bz2:
	@$(MAKECOOKIE)

post-patch:
	@# Fix because neither patch nor the installer makes this executable.
	@chmod 0755 $(WORKSRC)/mythvideo/mythvideo/scripts/tmdb.pl
	@$(MAKECOOKIE)

post-install:
	@rm -rf $(DESTDIR)$(versiondir)/$(GARNAME)
	@rm -rf $(DESTDIR)$(licensedir)/$(GARNAME)
	@$(MAKECOOKIE)
